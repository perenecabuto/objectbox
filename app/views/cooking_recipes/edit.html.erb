<h1>Editing cooking_recipe</h1>

<%= form_for(@cooking_recipe) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :difficult %>
      <%= f.select :difficult, CookingRecipe.difficulties.each_with_index.collect { |d, i| [d, i] } %>
    </p>
    <p>
      <%= f.label :howto_prepare %><br/>
      <%= f.text_area :howto_prepare %>
    </p>

    <fieldset>
      <legend>Ingredientes (<%= link_to "adicionar", new_cooking_recipe_cooking_ingredient_path(@cooking_recipe) %>)</legend>

      <table>
        <thead>
        <tr>
          <th>Nome</th>
          <th>Quantidade</th>
          <th>Unidade</th>
        </tr>
        </thead>

        <tbody>
        <% for ingredient in @cooking_recipe.ingredients %>
        <tr>
          <td><%= ingredient.description %></td>
          <td><%= ingredient.unit %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </fieldset>

    <p>
      <%= f.submit 'Update' %>
      <%= link_to 'Back', cooking_recipes_path %>
    </p>
<% end %>
