<h1>Listing simpletexts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Autor</th>
    <th>Content</th>
  </tr>

<% @simpletexts.each do |simpletext| %>
  <tr>
    <td><%=h simpletext.title %></td>
    <td><%=h simpletext.autor %></td>
    <td><%=h simpletext.content %></td>
    <td><%= link_to 'Show', simpletext %></td>
    <td><%= link_to 'Edit', edit_simpletext_path(simpletext) %></td>
    <td><%= link_to 'Destroy', simpletext, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New simpletext', new_simpletext_path %>